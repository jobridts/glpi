<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
		 backupGlobals="false"
		 colors="true">
    <testsuites>
        <testsuite name="GLPI">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./inc</directory>
            <directory>./config</directory>
        </whitelist>
    </filter>
    <php>
        <const name="GLPI_CONFIG_DIR" value="./tests" />
    </php>
</phpunit>
